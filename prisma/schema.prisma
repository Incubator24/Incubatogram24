generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int             @id @default(autoincrement())
  login          String          @unique
  email          String          @unique
  name           String?
  githubId       String?
  googleId       String?
  confirmed      Boolean         @default(false)
  passwordHash   String?
  passwordSalt   String?
  emails         String[]
  posts          Post[]
  githubAccounts GithubAccount[]
  googleAccounts GoogleAccount[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(references: [id], fields: [userId])
  userId    Int
}

model GithubAccount {
  id       Int    @id @default(autoincrement())
  userName String
  email    String
  user     User   @relation(references: [id], fields: [userId])
  userId   Int
}

model GoogleAccount {
  id       Int    @id @default(autoincrement())
  userName String
  email    String
  user     User   @relation(references: [id], fields: [userId])
  userId   Int
}
